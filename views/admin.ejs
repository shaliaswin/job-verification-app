<!DOCTYPE html>
<html>
<head>
  <title>Verifikasi Admin</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h2>Verifikasi Entry Data</h2>
    <form method="GET">
      <input name="cluster" placeholder="Filter berdasarkan Cluster">
      <button type="submit">Filter</button>
    </form>
    <table>
      <tr>
        <th>Tanggal</th><th>Material</th><th>Area</th>
        <th>Cluster</th><th>Blok</th><th>Unit</th><th>Foto</th>
      </tr>
      <% entries.forEach(e => { %>
        <tr>
          <td><%= e.date %></td>
          <td><%= e.material %></td>
          <td><%= e.area %></td>
          <td><%= e.cluster %></td>
          <td><%= e.blok %></td>
          <td><%= e.unit %></td>
          <td><img src="/uploads/<%= e.photo %>" width="50"></td>
        </tr>
      <% }); %>
    </table>
    <a href="/export">Export to Excel</a>
  </div>
  <a href="/logout" class="logout-btn">â¨‰</a>
</body>
</html>
