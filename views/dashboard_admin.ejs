<h2>Admin Dashboard</h2>

<% if (jobs.length === 0) { %>
  <p>Tidak ada pekerjaan yang dikirim oleh user.</p>
<% } else { %>
  <ul>
    <% jobs.forEach(job => { %>
      <li>
        <strong><%= job.job_name %></strong> oleh <%= job.username %> |
        Mulai: <%= job.start_date %> - Deadline: <%= job.deadline %>
        <% if (!job.is_verified) { %>
          <form method="POST" action="/admin/verify/<%= job.id %>" style="display:inline">
            <button>Verifikasi</button>
          </form>
        <% } else { %>
          ✔️ Diverifikasi
        <% } %>
      </li>
    <% }) %>
  </ul>
<% } %>
